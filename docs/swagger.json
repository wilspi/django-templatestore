{
    "swagger":"2.0",
    "info":{
        "description":"Template Store::: APIs to get, post and render templates.",
        "version":"1.0.0",
        "title":"Template Store"
    },
    "host":"127.0.0.1:8000",
    "basePath":"/templatestore/api/v1",
    "schemes":[
        "https",
        "http"
    ],
    "paths":{
        "/template":{
            "post":{
                "tags":[
                    "Add Template"
                ],
                "summary":"Add a new template to the template store",
                "description":"This will create a new template with version '0.1'. To make this default version, read complete documentation.",
                "operationId":"post_template",
                "consumes":[
                    "application/json"
                ],
                "produces":[
                    "application/json"
                ],
                "parameters":[
                    {
                        "in":"body",
                        "name":"body",
                        "description":"Template properties to push to template store",
                        "required":true,
                        "schema":{
                            "type":"object",
                            "properties":{
                                "name":{
                                    "type":"string",
                                    "maxLength":1000
                                },
                                "sub_templates": {
                                    "type":"array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "sub_type": {
                                                "type": "string"
                                            },
                                            "data": {
                                                "type": "string",
                                                "format": "binary"
                                            }
                                        }
                                    }
                                },
                                "type":{
                                    "type":"string",
                                    "description":"allowed types should be preconfigured in TemplateConfig table"
                                },
                                "attributes":{
                                    "type":"object",
                                    "additionalProperties":true
                                },
                                "sample_context_data":{
                                    "type":"object",
                                    "additionalProperties":true
                                }
                            }
                        }
                    }
                ],
                "responses":{
                    "201":{
                        "description":"Created",
                        "schema":{
                            "type":"object",
                            "properties":{
                                "name":{
                                    "type":"string",
                                    "maxLength":1000
                                },
                                "version":{
                                    "type":"string",
                                    "pattern":"^\\d+\\.\\d+$"
                                },
                                "default":{
                                    "type":"boolean"
                                },
                                "attributes":{
                                    "type":"object",
                                    "additionalProperties":true
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Bad Request",
                        "schema":{
                            "type":"object",
                            "properties":{
                                "error":{
                                    "type":"string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/templates":{
            "get":{
                "tags":[
                    "Get all templates"
                ],
                "summary":"Get all templates",
                "description":"This returns all templates with their default version. If not specified explicitly, the default version remains null. See complete documentation to update the default version.",
                "operationId":"get_templates",
                "produces":[
                    "application/json"
                ],
                "parameters":[
                    {
                        "name":"offset",
                        "in":"query",
                        "description":"number of objects to skip before starting to collect the result set",
                        "required":false,
                        "type":"integer"
                    },
                    {
                        "name":"limit",
                        "in":"query",
                        "description":"number of objects to return",
                        "required":false,
                        "type":"integer"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Ok",
                        "schema":{
                            "type":"array",
                            "items":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string",
                                        "maxLength":1000
                                    },
                                    "version":{
                                        "type":"string",
                                        "pattern":"^\\d+\\.\\d+$"
                                    },
                                    "default":{
                                        "type":"boolean"
                                    },
                                    "type":{
                                        "type":"string",
                                        "maxLength":1000
                                    },
                                    "attributes":{
                                        "type":"object",
                                        "additionalProperties":true
                                    },
                                    "created_on": {
                                        "type":"string",
                                        "format":"date-time"
                                    },
                                    "modified_on": {
                                        "type":"string",
                                        "format":"date-time"
                                    }
                                }
                            }
                        }
                    },
                    "404":{
                        "description":"Not Found",
                        "schema":{
                            "type":"object",
                            "properties":{
                                "message":{
                                    "type":"string"
                                }
                            }
                        }
                    }
                }
            }
        },
